FUNCTION recherche_linéaire(tab : ARRAY_OF INTEGER, elt : INTEGER) : INTEGER

VAR

  j : INTEGER ;

BEGIN

   j := 0 ;

   WHILE (j< ; tab.length) DO

      IF (tab[j] = elt) THEN

          RETURN j ; // l'élément est trouvé, sortons de la boucle et retournons l'index

      END_IF

      j := j+1 ; // mise à jour de l'index

   END_WHILE

   // nous avons atteint la fin du tableau sans trouver l'élément

   RETURN -1 ;// signifie que nous n'avons pas trouvé l'élément

END